{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/generate-scenarios",
      "destination": "/api/generate-scenarios.js"
    },
    {
      "source": "/api/generated-scenarios",
      "destination": "/api/generated-scenarios.js"
    },
    {
      "source": "/api/swagger",
      "destination": "/api/swagger.js"
    },
    {
      "source": "/docs",
      "destination": "/api/docs.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
